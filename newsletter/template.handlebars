{{#each content}}
<div class="news-section">
    {{#if image}}
        <img src="{{image}}" style="margin-bottom: 10px; margin-top: 10px;display:block; width: 100px;" />
    {{else}}
        <h1 style="display: block;font-family: 'Helvetica Neue', helvetica, arial, sans-serif;font-size: 16px;font-style: normal;font-weight: bold;line-height: 200%;letter-spacing: normal;margin: 0;text-align: left;color: #888888 !important;">
            {{heading}}
        </h1>
    {{/if}}
{{#if descriptionHTML}}
    <p></p>
    <p style="font-family: 'Helvetica Neue', helvetica, arial, sans-serif;">
        {{descriptionHTML}}
    </p>
{{/if}}


{{#each headlines}}
    <div class="headline" style="padding:8px 0;">
        {{#if image}}
            <a class="headline-source" style="color: #808080;text-decoration: none;" target="_blank" href="{{link}}">
                <img src="{{image}}" style="float: left; margin-right: 14px; margin-bottom: 40px; margin-top: 20px;" />
            </a>
        {{/if}}

        <h2 style="display: block;font-family: 'Helvetica Neue', helvetica, arial, sans-serif;font-size: 18px;font-style: normal;font-weight: bold;line-height: 1.5em;letter-spacing: normal;margin: 0;text-align: left;color: #bf351c !important;">
            <a class="headline-link" style="color: #bf351c;font-weight: normal;text-decoration: none;word-wrap: break-word !important;" href="{{link}}" target="_blank" >
                {{title}}
            </a>
        </h2>
        {{#if descriptionHTML}}
            <p style="font-family: 'Helvetica Neue', helvetica, arial, sans-serif;font-size:16px; margin-top: 5px;">
                {{descriptionHTML}}
                <a class="headline-source" style="font-size: 0.8em;color: #808080;text-decoration: none;font-weight: normal;word-wrap: break-word !important;" target="_blank" href="{{link}}"> ({{domain}})
                </a>
            </p>
        {{else}}
            <a class="headline-source" style="font-size: 0.8em;color: #808080;text-decoration: none;font-weight: normal;word-wrap: break-word !important;" target="_blank" href="{{link}}"> ({{domain}})
            </a>

            {{#if advert}}<span class="promoted" style="font-size: 0.8em;font-weight: normal;background-color: #ccc; padding: 3px 5px; color: #fefefe; margin-left: 10px">promoted</span>{{/if}}
        {{/if}}
    </div>
{{/each}}
</div>



<hr style="border:0px;border-top:1px solid #bf351c; margin: 25px 0 40px;" />


{{/each}}
